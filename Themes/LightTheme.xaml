<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:TwitterNotifier.Themes">
	<SolidColorBrush Color="#E6ECF0"
					 x:Key="MainBackground" />
	<SolidColorBrush Color="Black"
					 x:Key="MainForeground" />

	<SolidColorBrush Color="White"
					 x:Key="SettingsBackground" />
	<SolidColorBrush Color="#ADD8E6"
					 x:Key="SettingsHoverBackground" />
	<SolidColorBrush Color="#ADD8E6"
					 x:Key="SettingsPressedBackground" />
	<SolidColorBrush Color="Black"
					 x:Key="SettingsForeground" />
	<SolidColorBrush Color="#CCCCCC"
					 x:Key="SettingsBorder" />
	<SolidColorBrush Color="#CCCCCC"
					 x:Key="SettingsButtonBackground" />
	<SolidColorBrush Color="#ADD8E6"
					 x:Key="SettingsButtonHoverBackground" />
	<SolidColorBrush Color="Black"
					 x:Key="SettingsButtonForeground" />

	<SolidColorBrush Color="Red"
					 x:Key="ErrorForeground" />
</ResourceDictionary>