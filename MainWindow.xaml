<Window x:Class="TwitterNotifier.MainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		Title="Twitter Notifier"
		Height="350"
		Width="525">
	<Window.Resources>
		<BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
	</Window.Resources>
	<Grid>
		<StackPanel Visibility="{Binding IsAuthorizing, Converter={StaticResource BooleanToVisibilityConverter}}">
			<TextBlock><Hyperlink NavigateUri="{Binding AuthorizationURL}"
								  RequestNavigate="OnLoginNavigate">Login to Twitter</Hyperlink></TextBlock>
			<Label>Enter the PIN:</Label>
			<TextBox Text="{Binding AuthorizationCaptcha}" />
			<Button Content="Login"
					Click="OnLoginClick" />
		</StackPanel>
		<StackPanel Visibility="{Binding IsMonitoringTweets, Converter={StaticResource BooleanToVisibilityConverter}}">
			<ItemsControl ItemsSource="{Binding Tweets}">
				<ItemsControl.ItemTemplate>
					<DataTemplate>
						<TextBlock Text="{Binding FullText}" />
					</DataTemplate>
				</ItemsControl.ItemTemplate>
			</ItemsControl>
		</StackPanel>
	</Grid>
</Window>
